<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card">
          <%= image_tag(flat.picture_url, class: "card-img-top") if flat.picture_url.present? %>
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.description.truncate(100) %></p>
            <p class="card-text"><small class="text-muted">From $<%= flat.price_per_night %>/night</small></p>
            <a href="<%= flat_path(flat) %>" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
